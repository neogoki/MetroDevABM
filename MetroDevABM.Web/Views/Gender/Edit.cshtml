@model MetroDevABM.Genders.Dto.GenderDto
@{
    ViewBag.Title = L("EditGender");
}
@section scripts
{

}
<h2>
    @L("EditGender")
</h2>

@using (Html.BeginForm("Edit", "Gender", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <input type="hidden" value="@Model.Id" name="Id" />
    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" placeholder="@L("Title")" required maxlength="@MetroDevABM.Genders.Gender.MaxTitleLength">
    </div>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
    <button type="submit" class="btn btn-default">@L("Save")</button>
}

